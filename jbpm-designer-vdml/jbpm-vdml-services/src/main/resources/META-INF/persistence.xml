<?xml version="1.0" encoding="UTF-8"?>
<persistence
        version="2.0"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd
                      http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:orm="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <persistence-unit name="org.jbpm.vdml.jpa" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source >jdbc/jbpm-ds</jta-data-source>
        <!--<mapping-file>META-INF/TaskAuditorm.xml</mapping-file>-->
        <class>org.jbpm.vdml.services.model.meta.Activity</class>
        <class>org.jbpm.vdml.services.model.meta.BinaryMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.BusinessItemDefinition</class>
        <class>org.jbpm.vdml.services.model.meta.Capability</class>
        <class>org.jbpm.vdml.services.model.meta.Collaboration</class>
        <class>org.jbpm.vdml.services.model.meta.CollectiveMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.CountingMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.DeliverableFlow</class>
        <class>org.jbpm.vdml.services.model.meta.DirectMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.EnumeratedMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.Measure</class>
        <class>org.jbpm.vdml.services.model.meta.RescaledMeasure</class>
        <class>org.jbpm.vdml.services.model.meta.ResourceUse</class>
        <class>org.jbpm.vdml.services.model.meta.RoleBasedPortContainer</class>
        <class>org.jbpm.vdml.services.model.meta.Role</class>
        <class>org.jbpm.vdml.services.model.meta.StoreDefinition</class>
        <class>org.jbpm.vdml.services.model.meta.SuppliedStore</class>
        <class>org.jbpm.vdml.services.model.meta.ValueProposition</class>
        <class>org.jbpm.vdml.services.model.meta.ValuePropositionComponent</class>
        <class>org.jbpm.vdml.services.model.runtime.ActivityMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.ActivityObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.BusinessItemMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.BusinessItemObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.CapabilityMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.CapabilityPerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.CollaborationObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.DeliverableFlowMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.DeliverableFlowObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.IndividualParticipant</class>
        <class>org.jbpm.vdml.services.model.runtime.Measurement</class>
        <class>org.jbpm.vdml.services.model.runtime.Participant</class>
        <class>org.jbpm.vdml.services.model.runtime.ProvidedValuePropositionComponentMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.ProvidedValuePropositionComponentPerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.ProvidedValuePropositionPerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.ResourceUseMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.ResourceUseObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.StoreMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.RolePerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.StoreMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.StorePerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.SuppliedStoreMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.SuppliedStoreObservation</class>
        <class>org.jbpm.vdml.services.model.runtime.ValueAddMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.ValuePropositionComponentMeasurement</class>
        <class>org.jbpm.vdml.services.model.runtime.ValuePropositionComponentPerformance</class>
        <class>org.jbpm.vdml.services.model.runtime.ValuePropositionPerformance</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="false" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

            <!-- BZ 841786: AS7/EAP 6/Hib 4 uses new (sequence) generators which seem to cause problems -->
            <property name="hibernate.id.new_generator_mappings" value="false" />
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.BitronixJtaPlatform" />
        </properties>
    </persistence-unit>
</persistence>
